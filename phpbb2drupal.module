    $user->user_aim = strtr($user->user_aim, array("+" => ' ')); # PHPBB stores spaces as +, replace with ' '
    $user->user_yim = strtr($user->user_yim, array("+" => ' '));
    $user->user_timezone = $user->user_timezone * 60 * 60;  # Drupal stores timezones in seconds

