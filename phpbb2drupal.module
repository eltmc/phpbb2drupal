  switch ($form_values['import']) {
    case 'users':
      phpbb2drupal_import_users();
      if(!variable_get('phpbb2drupal_import_user_successful', 0)) {
        $_SESSION['phpbb2drupal_selected'] = 'users';
      } else {
        $_SESSION['phpbb2drupal_selected'] = 'categories';
      }
